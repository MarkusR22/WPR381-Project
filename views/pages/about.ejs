<%- include('../partials/header', { title: 'About Us' }) %>
<div class="background-stripes">
  <div class="stripe red"></div>
  <div class="stripe yellow"></div>
  <div class="stripe black"></div>
</div>

<main class="about-container">
  <div class="main-about-title">
    <h1>About Us</h1>
  </div>

  <div class="about-blocks-wrapper">
    <section class="about-block">
      <div class="block-front">
        <img src="/images/community.jpg" alt="Community Overview">
        <h2>Community Overview</h2>
      </div>
      <div class="block-back">
        <h2>Community Overview</h2>
        <p>We are a group of passionate individuals dedicated to bringing people together...</p>
      </div>
    </section>

    <section class="about-block">
      <div class="block-front">
        <img src="/images/mission.jpg" alt="Community Overview">
        <h2>Our Mission</h2>
      </div>
      <div class="block-back">
        <h2>Our Mission</h2>
        <p>Our mission is to connect people in our community by sharing events, news, and resources.</p>
      </div>
    </section>
  </div>

  <div class="about-blocks-wrapper">
    <section class="about-block">
      <div class="block-front">
        <img src="/images/value.jpg" alt="Community Overview">
        <h2>Core Values</h2>
      </div>
      <div class="block-back">
        <h2>Core Values</h2>
        <ul class="core-values-list">
          <li>Inclusive</li>
          <li>Supportive</li>
          <li>Empowering</li>
        </ul>
      </div>
    </section>

    <section class="about-block">
      <div class="block-front">
        <img src="/images/history.jpg" alt="Community Overview">
        <h2>Our History</h2>
      </div>
      <div class="block-back">
        <h2>Our History</h2>
        <p>Belgium Campus iTversity was founded in 1999. The institution is built on core values of innovation, excellence, and industry relevance. It aims to develop highly skilled IT professionals through quality education and practical experience.</p>
      </div>
    </section>
  </div>

  
  <section class="team">
    <div class="team-section-block">
      <h2 class="team-title">Meet the Team</h2>
      <div class="team-grid">
        <% if (teamMembers && teamMembers.length) { %>
          <% teamMembers.forEach(member => { %>
            <div class="team-member">
              <img src="<%= member.image %>" alt="<%= member.name %>" width="100" height="100">
              <div>
                <p><strong><%= member.name %></strong></p>
                <p><%= member.role %></p>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p style="text-align: center;">No team members to show right now.</p>
        <% } %>
      </div>
    </div>
  </section>

</main>

<%- include('../partials/footer') %>