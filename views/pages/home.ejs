<%- include('../partials/header', { title: 'Home' }) %>
 <div class="background-stripes">
  <div class="stripe red"></div>
  <div class="stripe yellow"></div>
  <div class="stripe black"></div>
  </div>
<main class="home-container">

  <section class="welcome-message">
     <div class="page-header">
    
  <h1 class="page-titleMain" >Welcome to the Community Portal!</h1>
    </div>
    <p>Stay connected, share events, and discover whats happening in our community.</p>
  </section>

  <div class="event-container px-5 mt-5 mb-4">
    <h2 class="fw-bold mb-5 text-center">Upcoming Events</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <!--Looping through all elements from array and creating styled cards for each element-->
      <% events.forEach(event => { %>
        <div class="col">
          <div class="card shadow-sm text-white position-relative" style="background: url('<%= event.imageUrl %>') center / cover no-repeat; height: 250px;">
            <!-- Title shown by default -->
            <div class="card-overlay card-title-only">
              <h5 class="card-title m-0"><%= event.title %></h5>
              <div class="countdown" data-date="<%= event.date %>">Loading...</div>
            </div>

            <!-- Full details shown on hover -->
            <div class="card-overlay card-hover-details">
              <h5 class="card-title"><%= event.title %></h5>
              <div class="countdown mb-2" data-date="<%= event.date %>">Loading...</div>
              <h6 class="card-subtitle mb-2"><%= event.club %> â€¢ <%= event.date %></h6>
              <p class="card-text text-white"><%= event.description %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</main>
<%- include('../partials/footer') %>